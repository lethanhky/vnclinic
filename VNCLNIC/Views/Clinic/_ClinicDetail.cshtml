@using VNCLNIC.Common.Enums;
@using VNCLNIC.Models;
@model  Clinic

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Thông tin người dùng</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">

    <div class="row">
        <div class="col-8">
            <table class="tab_bordernone">
                <tbody>
                    <tr>
                        <td style="width:220px">Tên phòng khám</td>
                        <td class="s">:</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td style="width:220px">Hotline</td>
                        <td class="s">:</td>
                        <td>@Model.HotLine</td>
                    </tr>
                    <tr>
                        <td style="width:220px">Email</td>
                        <td class="s">:</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td style="width:220px">Số điện thoại</td>
                        <td class="s">:</td>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <td style="width:220px">Địa chỉ</td>
                        <td class="s">:</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td style="width:220px">Trạng thái hoạt động</td>
                        <td class="s">:</td>
                        <td>
                            @if (Model.Status == ClinicStatus.ACTIVE)
                            {
                                <span class="badge badge-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Ngưng Hoạt động</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td style="width:220px">Thời gian làm việc buổi sáng</td>
                        <td class="s">:</td>
                        <td>
                            @if (Model.IsWorkMorning == true)
                            {
                                <span class="badge badge-success">Có</span><p>(từ @Model.StartMorning đến @Model.StopMorning )</p>
                            }
                            else
                            {
                                <span class="badge badge-success">Không</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td style="width:220px">Thời gian làm việc buổi chiều</td>
                        <td class="s">:</td>
                        <td>
                            @if (Model.IsWorAfternoon == true)
                            {
                                <span class="badge badge-success">Có</span><p>(từ @Model.StartAfternoon đến @Model.StopAfternoon )</p>
                            }
                            else
                            {
                                <span class="badge badge-success">Không</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td style="width:220px">Thời gian làm việc buổi tối</td>
                        <td class="s">:</td>
                        <td>
                            @if (Model.IsWorEvening == true)
                            {
                                <span class="badge badge-success">Có</span><p>(từ @Model.StartEvening đến @Model.StopEvening )</p> 
                            }
                            else
                            {
                                <span class="badge badge-success">Không</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-4">
            <div style="text-align:center">
                <div>
                    @if (Model.Logo != null)
                    {
                        <img src="@{
                                var url = string.Format ( "{0}://{1}{2}",Request.Url.Scheme,Request.Url.Authority,Url.Content ( "~" ) );
                                @url
                        }Resource/VCIMG?appx=@Model.Logo" id="Avatar_dis" style="width:70%;height:70%" />
                    }
                    else
                    {
                        <img src="~/Content/image/person-512.png" id="Avatar_dis" style="width:50%;height:50%" />
                    }
                </div>
            </div>
            <div style="text-align:center">Logo</div>
        </div>
    </div>
