
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Modal -->
<div class="modal fade" id="ClinicModel" tabindex="-1" role="dialog" aria-labelledby="RoleModelLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content bg-secondary" id="modal-body-update">
        </div>
    </div>
</div>


<div class="modal fade" id="ClinicDetailModel" tabindex="-1" role="dialog" aria-labelledby="RoleDetailModelLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content bg-secondary" id="modal-body-detail">

        </div>
    </div>
</div>


<div class="header bg-gradient-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h3 text-white d-inline-block mb-0">Phòng khám</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Dashboards</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý phòng khám</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <!-- Button trigger modal -->
                    @using (Ajax.BeginForm("Add", "Clinic", new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "GET",
                        LoadingElementId = "loader",
                        UpdateTargetId = "modal-body-update"

                    }, new { @id = "addForm" }))
                    {
                        <button type="submit" class="btn btn-sm btn-neutral">
                            <span class="btn-inner--icon"><i class="ni ni-fat-add"></i></span>
                            <span class="btn-inner--text">Thêm phòng khám</span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                @using (Ajax.BeginForm("Filter", "Clinic", new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST",
                    LoadingElementId = "loader",
                    UpdateTargetId = "allContent"

                }, new { @id = "searchForm" }))
                {
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">Danh sách phòng khám</h3>
                            </div>
                            <div class="col">
                                <ul class="nav nav-pills justify-content-end">
                                    <li class="nav-item col-lg-5">
                                        <select id="status" name="status" class="form-control select2 select2-purple" data-dropdown-css-class="select2-purple">
                                            <option value="0">Tất cả</option>
                                            <option value="1">Hoạt động</option>
                                            <option value="2">Ngưng hoạt động</option>
                                        </select>
                                    </li>
                                    <li class="nav-item col-lg-3">
                                        <select id="numItems" name="numItems" class="form-control  select2 select2-purple" data-dropdown-css-class="select2-purple">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="40">40</option>
                                            <option value="60">60</option>
                                        </select>
                                    </li>
                                    <li class="nav-item">
                                        <button class="btn btn-sm btn-outline-success" type="submit" id="doFilter">Lọc</button>
                                        <input class="form-control form-control-sm" placeholder="Search" type="hidden" name="SearchString" id="SearchString">
                                        <input type="hidden" id="selPage" name="selPage" value="1" />
                                        <input type="hidden" id="sortBy" name="sortBy" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                <div id="allContent">

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        doCommit();
    });

</script>
